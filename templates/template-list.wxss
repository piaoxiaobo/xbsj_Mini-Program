.tmpContent{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  padding-bottom: 5rpx;
}
.tmp_avatar_date {
  margin:10rpx 0 10rpx 10rpx;
}
.tmp_avatar_date image {
  width: 60rpx;
  height:60rpx;
  vertical-align: middle;
}

.tmp_avatar_date text {
  font-size: 13px;
  margin-left: 20rpx;
  vertical-align: middle;
}
.tmp_title {
  margin:5px;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.tmp_img {
  width:100%;
  height:340rpx;
}
.tmp_content{
  font-size: 28rpx;
  color: #666;
  letter-spacing:3px;
  text-indent: 30px;
  line-height: 40rpx;
}

.tmp_love_attention image {
  width:16px;
  height:16px;
  margin-left: 10rpx;
  vertical-align: middle;
}

.tmp_love_attention text {
  font-size: 28rpx;
  color: #666;
  vertical-align: middle;
  margin-right: 10px;
}
.content_box{
  margin: 5px 10px 10px 10px;
}